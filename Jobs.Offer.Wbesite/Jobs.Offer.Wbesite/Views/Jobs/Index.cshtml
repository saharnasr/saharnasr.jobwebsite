@model IEnumerable<Jobs.Offer.Wbesite.Models.Job>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="panel panel-info" style="background-color:#e6ecfb;border-color:#3d727d; padding:1px; text-align:center;">

    <h2>قائمة الوظائف</h2>
    
</div>
    <p>
        @Html.ActionLink("اضافة وظيفة جديدة", "Create", null, new { @class = "btn btn-info" })
    </p>
    <table class="table table-hover table-bordered table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Category.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobContent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobImage)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.CategoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.JobTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.JobContent)
                </td>
                <td>
                    <img src="~/Uploads/@Html.DisplayFor(model=>item.JobImage)" class="thumbnail" style="width:50px;height:50px;" />
                </td>
                <td>
                    @Html.ActionLink("تعديل", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("تفاصيل", "Details", new { id = item.Id }) |
                    @Html.ActionLink("حذف", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
