@model IEnumerable<Jobs.Offer.Wbesite.Models.Job>

@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


    <div class="panel panel-info">
      <div class="panel-heading"><h1 >نتائج البحث</h1></div>  
        <div class="row panel-body" style="margin-right:10px;">

            @foreach (var subItem in Model)
            {
                <div class="col-md-3 thumbnail" style="margin-left:20px;margin-bottom:30px; height:380px;  background-color: #fdf7f7;">
                    <img src="~/Uploads/@subItem.JobImage" />
                    <h3>@Html.DisplayFor(modelItem => subItem.JobTitle)</h3>
                    <h5>@Html.Raw(HttpUtility.HtmlDecode(Html.DisplayFor(modelItem => subItem.JobContent).ToString()))</h5>
                    
                    @Html.ActionLink("التفاصيل", "Details", new { JobId = subItem.Id }, new { @class = "btn btn-primary" })

                </div>
            }
        </div>
    </div>

